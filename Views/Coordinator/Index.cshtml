@model List<Contract_Monthly_Claim_System.Models.Claim>

<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>CMCS - Coordinator Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#005A9C",
                        "background-light": "#F0F2F5",
                        "background-dark": "#101922",
                        "accent-green": "#28A745",
                        "accent-red": "#DC3545",
                        "text-dark": "#333333",
                        "text-light": "#ffffff",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24
        }
    </style>
</head>

<body class="bg-background-light dark:bg-background-dark font-display text-text-dark dark:text-text-light">
    <div class="flex min-h-screen flex-col">
        <header class="bg-white dark:bg-slate-900/70 shadow-sm">
            <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
                <div class="flex items-center gap-3">
                    <h1 class="text-text-dark dark:text-white text-lg font-bold">Contract Monthly Claim System - Coordinator</h1>
                </div>
                <div class="flex items-center gap-4">
                    <a class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-primary text-white text-sm font-bold leading-normal tracking-[0.015em]" href="@Url.Action("Index", "Login")">
                        <span class="truncate">Logout</span>
                    </a>
                </div>
            </div>
        </header>
        <main class="flex-1 p-4 sm:p-6 lg:p-8">
            <div class="mx-auto max-w-7xl">
                <div class="mb-8">
                    <h2 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-gray-100 sm:text-3xl">Claims Awaiting Review</h2>
                    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Review and process submitted claims from lecturers.</p>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @if (Model != null && Model.Any())
                {
                    <div class="overflow-hidden rounded-xl bg-white shadow-sm dark:bg-slate-900/70">
                        <div class="overflow-x-auto">
                            <table class="w-full text-left text-sm text-slate-500 dark:text-slate-400">
                                <thead class="bg-slate-50 text-xs uppercase text-slate-700 dark:bg-slate-800 dark:text-slate-400">
                                    <tr>
                                        <th class="px-6 py-3" scope="col">Lecturer</th>
                                        <th class="px-6 py-3" scope="col">Course</th>
                                        <th class="px-6 py-3" scope="col">Date</th>
                                        <th class="px-6 py-3" scope="col">Amount</th>
                                        <th class="px-6 py-3" scope="col">Document</th>
                                        <th class="px-6 py-3" scope="col">Manager Status</th>
                                        <th class="px-6 py-3" scope="col">Coordinator Status</th>
                                        <th class="px-6 py-3 text-center" scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model)
                                    {
                                        <tr class="border-b bg-white dark:border-slate-800 dark:bg-slate-900">
                                            <td class="whitespace-nowrap px-6 py-4 font-medium text-text-dark dark:text-white">@claim.LecturerName</td>
                                            <td class="px-6 py-4">@claim.CourseName</td>
                                            <td class="px-6 py-4">@claim.LectureDate.ToString("yyyy-MM-dd")</td>
                                            <td class="px-6 py-4">R @claim.TotalAmount.ToString("N2")</td>
                                            <td class="px-6 py-4">
                                                @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                                {
                                                    <a href="@claim.DocumentPath" target="_blank" class="text-primary hover:underline">View</a>
                                                }
                                                else
                                                {
                                                    <span class="text-gray-400">N/A</span>
                                                }
                                            </td>
                                            <td class="px-6 py-4">
                                                @if (claim.ManagerStatus == "Approved")
                                                {
                                                    <span class="rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-800 dark:bg-green-900 dark:text-green-300">Approved</span>
                                                }
                                                else if (claim.ManagerStatus == "Rejected")
                                                {
                                                    <span class="rounded-full bg-red-100 px-2 py-1 text-xs font-medium text-red-800 dark:bg-red-900 dark:text-red-300">Rejected</span>
                                                }
                                                else
                                                {
                                                    <span class="rounded-full bg-yellow-100 px-2 py-1 text-xs font-medium text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">Pending</span>
                                                }
                                            </td>
                                            <td class="px-6 py-4">
                                                @if (claim.CoordinatorStatus == "Approved")
                                                {
                                                    <span class="rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-800 dark:bg-green-900 dark:text-green-300">Approved</span>
                                                }
                                                else if (claim.CoordinatorStatus == "Rejected")
                                                {
                                                    <span class="rounded-full bg-red-100 px-2 py-1 text-xs font-medium text-red-800 dark:bg-red-900 dark:text-red-300">Rejected</span>
                                                }
                                                else
                                                {
                                                    <span class="rounded-full bg-yellow-100 px-2 py-1 text-xs font-medium text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">Pending</span>
                                                }
                                            </td>
                                            <td class="px-6 py-4">
                                                @if (claim.CoordinatorStatus == "Pending")
                                                {
                                                    <div class="flex items-center justify-center gap-2">
                                                        <form asp-controller="Coordinator" asp-action="ApproveClaim" method="post" onsubmit="return confirm('Are you sure you want to APPROVE this claim?');" style="display:inline;">
                                                            <input type="hidden" name="claimId" value="@claim.Id" />
                                                            <button type="submit" class="flex h-8 items-center justify-center rounded-lg bg-accent-green px-3 text-sm font-medium text-white hover:bg-accent-green/90 focus:outline-none focus:ring-2 focus:ring-accent-green/50">
                                                                <span class="material-symbols-outlined mr-1 text-base">check_circle</span>
                                                                Approve
                                                            </button>
                                                        </form>
                                                        <form asp-controller="Coordinator" asp-action="RejectClaim" method="post" onsubmit="return confirm('Are you sure you want to REJECT this claim?');" style="display:inline;">
                                                            <input type="hidden" name="claimId" value="@claim.Id" />
                                                            <button type="submit" class="flex h-8 items-center justify-center rounded-lg bg-accent-red px-3 text-sm font-medium text-white hover:bg-accent-red/90 focus:outline-none focus:ring-2 focus:ring-accent-red/50">
                                                                <span class="material-symbols-outlined mr-1 text-base">cancel</span>
                                                                Reject
                                                            </button>
                                                        </form>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-gray-500 text-sm">Already Reviewed</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <p class="text-gray-500 dark:text-gray-400">No claims to review at this time.</p>
                    </div>
                }
            </div>
        </main>
    </div>
</body>
</html>