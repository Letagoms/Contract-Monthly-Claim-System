<!DOCTYPE html>

<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>CMCS - Submit Monthly Claim</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                "primary": "#005A9C",
                "background-light": "#F0F2F5",
                "background-dark": "#101922",
                "text-light": "#333333",
                "text-dark": "#F0F2F5",
                "success": "#28A745",
                "error": "#DC3545"
              },
              fontFamily: {
                "display": ["Inter", "sans-serif"]
              },
              borderRadius: {"DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px"},
            },
          },
        }
    </script>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-text-light dark:text-text-dark">
    <div class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden">
        <div class="layout-container flex h-full grow flex-col">
            <div class="px-4 md:px-10 lg:px-40 flex flex-1 justify-center py-5">
                <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
                    <header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-b-[#e7edf3] px-4 md:px-10 py-3 bg-white dark:bg-background-dark dark:border-gray-700 rounded-t-lg">
                        <div class="flex items-center gap-4 text-text-light dark:text-text-dark">
                            <div class="size-6 text-primary">
                                <span class="material-symbols-outlined" style="font-size: 24px;">
                                    description
                                </span>
                            </div>
                            <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">Contract Monthly Claim System (CMCS)</h2>
                        </div>
                        <a href="@Url.Action("Index", "Register")" class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-primary text-white text-sm font-bold leading-normal tracking-[0.015em]">
                            <span class="truncate">Logout</span>
                        </a>
                    </header>
                    
                    <main class="p-4 md:p-6 lg:p-8 bg-white dark:bg-background-dark shadow-sm rounded-b-lg">
                        <div class="flex flex-wrap justify-between items-center gap-4 mb-8">
                            <p class="text-3xl md:text-4xl font-black leading-tight tracking-[-0.033em] min-w-72">Submit Monthly Claim</p>
                            <a href="@Url.Action("Index", "LectureView")" class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-primary/20 text-primary dark:bg-primary/30 dark:text-white text-sm font-bold leading-normal tracking-[0.015em]">
                                <span class="truncate">View Past Claims</span>
                            </a>
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                                @ViewBag.Error
                            </div>
                        }

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                                @TempData["SuccessMessage"]
                            </div>
                        }

                        <form id="claimForm" asp-controller="LectureClaim" asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
                            <div class="space-y-8">
                                <section>
                                    <h2 class="text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5 border-b border-gray-200 dark:border-gray-700 mb-4">Claim Details</h2>
                                    <div class="grid grid-cols-1 gap-4 px-4 py-3">
                                        <label class="flex flex-col min-w-40 flex-1">
                                            <p class="text-base font-medium leading-normal pb-2">Lecturer's Name</p>
                                            <input name="LecturerName" required class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-text-light dark:text-text-dark focus:outline-0 focus:ring-0 border border-[#cfdbe7] dark:border-gray-600 bg-background-light dark:bg-gray-800 focus:border-primary h-14 placeholder:text-[#4c739a] p-[15px] text-base font-normal leading-normal" value="@ViewBag.UserName" readonly />
                                        </label>
                                    </div>
                                </section>
                                
                                <section>
                                    <h2 class="text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5 border-b border-gray-200 dark:border-gray-700 mb-4">Lecture Entries</h2>
                                    <p class="text-sm text-gray-500 dark:text-gray-400 px-4 mb-4">Please enter lecture details for this claim.</p>
                                    <div class="overflow-x-auto px-4">
                                        <div class="grid grid-cols-1 gap-4">
                                            <label class="flex flex-col">
                                                <p class="text-sm font-medium pb-2">Date</p>
                                                <input name="LectureDate" type="date" required class="form-input w-full rounded-lg border-[#cfdbe7] dark:border-gray-600 bg-background-light dark:bg-gray-800 focus:border-primary focus:ring-primary/50 text-sm h-12 px-3" />
                                            </label>
                                            <label class="flex flex-col">
                                                <p class="text-sm font-medium pb-2">Course Name</p>
                                                <input name="CourseName" type="text" required placeholder="e.g., Advanced .NET" class="form-input w-full rounded-lg border-[#cfdbe7] dark:border-gray-600 bg-background-light dark:bg-gray-800 focus:border-primary focus:ring-primary/50 text-sm h-12 px-3" />
                                            </label>
                                            
                                            <!-- Hours Worked with Real-time Validation -->
                                            <label class="flex flex-col">
                                                <p class="text-sm font-medium pb-2">Hours Worked <span class="text-gray-500">(Max: 160 hours)</span></p>
                                                <input id="hoursWorked" name="HoursWorked" type="number" step="0.5" min="0" max="160" required placeholder="0" class="form-input w-full rounded-lg border-[#cfdbe7] dark:border-gray-600 bg-background-light dark:bg-gray-800 focus:border-primary focus:ring-primary/50 text-sm h-12 px-3" />
                                                <div id="hoursWorkedError" class="hidden mt-2 p-3 bg-red-100 dark:bg-red-900/30 border border-red-400 dark:border-red-700 text-red-700 dark:text-red-300 rounded-lg flex items-start gap-2">
                                                    <span class="material-symbols-outlined text-red-600 dark:text-red-400" style="font-size: 20px;">error</span>
                                                    <span class="text-sm font-medium"></span>
                                                </div>
                                                <div id="hoursWorkedSuccess" class="hidden mt-2 p-3 bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-700 text-green-700 dark:text-green-300 rounded-lg flex items-start gap-2">
                                                    <span class="material-symbols-outlined text-green-600 dark:text-green-400" style="font-size: 20px;">check_circle</span>
                                                    <span class="text-sm font-medium">Valid hours entered</span>
                                                </div>
                                            </label>
                                            
                                            <!-- Hourly Rate with Real-time Validation -->
                                            <label class="flex flex-col">
                                                <p class="text-sm font-medium pb-2">Hourly Rate (R) <span class="text-gray-500">(Max: R625)</span></p>
                                                <input id="hourlyRate" name="HourlyRate" type="number" step="0.01" min="0" max="625" required placeholder="0.00" class="form-input w-full rounded-lg border-[#cfdbe7] dark:border-gray-600 bg-background-light dark:bg-gray-800 focus:border-primary focus:ring-primary/50 text-sm h-12 px-3" />
                                                <div id="hourlyRateError" class="hidden mt-2 p-3 bg-red-100 dark:bg-red-900/30 border border-red-400 dark:border-red-700 text-red-700 dark:text-red-300 rounded-lg flex items-start gap-2">
                                                    <span class="material-symbols-outlined text-red-600 dark:text-red-400" style="font-size: 20px;">error</span>
                                                    <span class="text-sm font-medium"></span>
                                                </div>
                                                <div id="hourlyRateSuccess" class="hidden mt-2 p-3 bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-700 text-green-700 dark:text-green-300 rounded-lg flex items-start gap-2">
                                                    <span class="material-symbols-outlined text-green-600 dark:text-green-400" style="font-size: 20px;">check_circle</span>
                                                    <span class="text-sm font-medium">Valid rate entered</span>
                                                </div>
                                            </label>
                                            
                                            <!-- Total Amount Display -->
                                            <div class="flex flex-col p-4 bg-primary/10 dark:bg-primary/20 border-2 border-primary/30 rounded-lg">
                                                <p class="text-sm font-medium pb-2 text-primary dark:text-primary/90">Total Amount</p>
                                                <div class="flex items-center gap-2">
                                                    <span class="text-2xl font-bold text-primary dark:text-primary/90">R</span>
                                                    <span id="totalAmount" class="text-3xl font-black text-primary dark:text-primary/90">0.00</span>
                                                </div>
                                                <p class="text-xs text-gray-600 dark:text-gray-400 mt-2">Hours Worked × Hourly Rate</p>
                                            </div>

                                            <label class="flex flex-col">
                                                <p class="text-sm font-medium pb-2">Description (Optional)</p>
                                                <textarea name="Description" rows="3" placeholder="Additional notes about this claim..." class="form-input w-full rounded-lg border-[#cfdbe7] dark:border-gray-600 bg-background-light dark:bg-gray-800 focus:border-primary focus:ring-primary/50 text-sm p-3"></textarea>
                                            </label>
                                        </div>
                                    </div>
                                </section>

                                <section>
                                    <h2 class="text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5 border-b border-gray-200 dark:border-gray-700 mb-4">Supporting Documents</h2>
                                    <p class="text-sm text-gray-500 dark:text-gray-400 px-4 mb-4">Upload any relevant supporting documents (e.g., timesheets, receipts).</p>
                                    <div class="px-4 py-3">
                                        <div class="flex justify-center items-center w-full">
                                            <label class="flex flex-col items-center justify-center w-full h-48 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-background-light dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 dark:border-gray-600" for="documentFile">
                                                <div class="flex flex-col items-center justify-center pt-5 pb-6 text-gray-500 dark:text-gray-400">
                                                    <span class="material-symbols-outlined" style="font-size: 48px;">cloud_upload</span>
                                                    <p class="mb-2 text-sm"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                                                    <p class="text-xs">PDF, PNG, JPG or DOCX (MAX. 5MB)</p>
                                                </div>
                                                <input name="Document" class="hidden" id="documentFile" type="file" accept=".pdf,.png,.jpg,.jpeg,.docx" />
                                            </label>
                                        </div>
                                        <div id="filePreview" class="mt-4 space-y-2 hidden">
                                            <!-- File preview will appear here -->
                                        </div>
                                    </div>
                                </section>

                                <div class="flex justify-end gap-4 pt-8">
                                    <button id="submitBtn" type="submit" class="flex min-w-[120px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-6 bg-primary text-white text-base font-bold leading-normal tracking-[0.015em] hover:bg-primary/90 disabled:bg-gray-400 disabled:cursor-not-allowed">
                                        <span class="truncate">Submit Claim</span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </main>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Validation constants (matching server-side validation)
        const MAX_HOURLY_RATE = 625;
        const MAX_HOURS_WORKED = 160;

        // Get form elements
        const hoursWorkedInput = document.getElementById('hoursWorked');
        const hourlyRateInput = document.getElementById('hourlyRate');
        const submitBtn = document.getElementById('submitBtn');
        const claimForm = document.getElementById('claimForm');

        // Validation state
        let isHoursValid = true;
        let isRateValid = true;

        // Real-time validation for Hours Worked
        function validateHoursWorked() {
            const value = parseFloat(hoursWorkedInput.value);
            const errorDiv = document.getElementById('hoursWorkedError');
            const successDiv = document.getElementById('hoursWorkedSuccess');
            const errorText = errorDiv.querySelector('span:last-child');

            if (hoursWorkedInput.value === '' || isNaN(value)) {
                errorDiv.classList.add('hidden');
                successDiv.classList.add('hidden');
                hoursWorkedInput.classList.remove('border-red-500', 'border-green-500');
                isHoursValid = true;
                updateSubmitButton();
                return;
            }

            if (value <= 0) {
                errorText.textContent = 'Hours worked must be greater than zero.';
                errorDiv.classList.remove('hidden');
                successDiv.classList.add('hidden');
                hoursWorkedInput.classList.add('border-red-500');
                hoursWorkedInput.classList.remove('border-green-500');
                isHoursValid = false;
            } else if (value > MAX_HOURS_WORKED) {
                errorText.textContent = `Hours worked cannot exceed ${MAX_HOURS_WORKED} hours. You entered ${value} hours.`;
                errorDiv.classList.remove('hidden');
                successDiv.classList.add('hidden');
                hoursWorkedInput.classList.add('border-red-500');
                hoursWorkedInput.classList.remove('border-green-500');
                isHoursValid = false;
            } else {
                errorDiv.classList.add('hidden');
                successDiv.classList.remove('hidden');
                hoursWorkedInput.classList.remove('border-red-500');
                hoursWorkedInput.classList.add('border-green-500');
                isHoursValid = true;
            }

            updateSubmitButton();
            calculateTotal();
        }

        // Real-time validation for Hourly Rate
        function validateHourlyRate() {
            const value = parseFloat(hourlyRateInput.value);
            const errorDiv = document.getElementById('hourlyRateError');
            const successDiv = document.getElementById('hourlyRateSuccess');
            const errorText = errorDiv.querySelector('span:last-child');

            if (hourlyRateInput.value === '' || isNaN(value)) {
                errorDiv.classList.add('hidden');
                successDiv.classList.add('hidden');
                hourlyRateInput.classList.remove('border-red-500', 'border-green-500');
                isRateValid = true;
                updateSubmitButton();
                return;
            }

            if (value <= 0) {
                errorText.textContent = 'Hourly rate must be greater than zero.';
                errorDiv.classList.remove('hidden');
                successDiv.classList.add('hidden');
                hourlyRateInput.classList.add('border-red-500');
                hourlyRateInput.classList.remove('border-green-500');
                isRateValid = false;
            } else if (value > MAX_HOURLY_RATE) {
                errorText.textContent = `Hourly rate cannot exceed R${MAX_HOURLY_RATE}. You entered R${value.toFixed(2)}.`;
                errorDiv.classList.remove('hidden');
                successDiv.classList.add('hidden');
                hourlyRateInput.classList.add('border-red-500');
                hourlyRateInput.classList.remove('border-green-500');
                isRateValid = false;
            } else {
                errorDiv.classList.add('hidden');
                successDiv.classList.remove('hidden');
                hourlyRateInput.classList.remove('border-red-500');
                hourlyRateInput.classList.add('border-green-500');
                isRateValid = true;
            }

            updateSubmitButton();
            calculateTotal();
        }

        // Update submit button state
        function updateSubmitButton() {
            if (isHoursValid && isRateValid) {
                submitBtn.disabled = false;
                submitBtn.classList.remove('opacity-50');
            } else {
                submitBtn.disabled = true;
                submitBtn.classList.add('opacity-50');
            }
        }

        // Calculate total amount
        function calculateTotal() {
            const hoursWorked = parseFloat(hoursWorkedInput.value) || 0;
            const hourlyRate = parseFloat(hourlyRateInput.value) || 0;
            const totalAmount = hoursWorked * hourlyRate;
            
            document.getElementById('totalAmount').textContent = totalAmount.toFixed(2);
        }

        // Add event listeners for real-time validation
        hoursWorkedInput.addEventListener('input', validateHoursWorked);
        hoursWorkedInput.addEventListener('change', validateHoursWorked);
        hoursWorkedInput.addEventListener('blur', validateHoursWorked);

        hourlyRateInput.addEventListener('input', validateHourlyRate);
        hourlyRateInput.addEventListener('change', validateHourlyRate);
        hourlyRateInput.addEventListener('blur', validateHourlyRate);

        // Prevent form submission if validation fails
        claimForm.addEventListener('submit', function(e) {
            validateHoursWorked();
            validateHourlyRate();
            
            if (!isHoursValid || !isRateValid) {
                e.preventDefault();
                alert('Please fix the validation errors before submitting.');
                return false;
            }
        });

        // File upload preview functionality
        document.getElementById('documentFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const preview = document.getElementById('filePreview');
            
            if (file) {
                preview.classList.remove('hidden');
                preview.innerHTML = `
                    <div class="flex items-center justify-between p-2 border rounded-lg bg-background-light dark:bg-gray-800 dark:border-gray-700">
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-primary" style="font-size:24px;">insert_drive_file</span>
                            <span class="text-sm font-medium">${file.name}</span>
                        </div>
                        <button type="button" class="text-error/80 hover:text-error dark:text-error/70 dark:hover:text-error" onclick="document.getElementById('documentFile').value=''; document.getElementById('filePreview').classList.add('hidden');">
                            <span class="material-symbols-outlined" style="font-size:20px;">close</span>
                        </button>
                    </div>
                `;
            }
        });
    </script>
</body>
</html>