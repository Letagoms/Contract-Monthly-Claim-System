                            <div class="flex overflow-hidden rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark/50">
                                <table class="flex-1">
                                    <thead>
                                        <tr class="bg-gray-50 dark:bg-gray-800/50">
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[15%]">Lecturer</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[20%]">Course</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[20%]">Submission Date</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[15%]">Document</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[15%]">Coordinator Decision</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[15%]">Manager Decision</th>
                                        </tr>
                                    </thead>

