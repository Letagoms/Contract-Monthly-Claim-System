<!DOCTYPE html>

<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Manager Dashboard - Contract Monthly Claim System</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                "primary": "#1173d4",
                "background-light": "#f6f7f8",
                "background-dark": "#101922",
              },
              fontFamily: {
                "display": ["Inter", "sans-serif"]
              },
              borderRadius: {
                "DEFAULT": "0.25rem",
                "lg": "0.5rem",
                "xl": "0.75rem",
                "full": "9999px"
              },
            },
          },
        }
    </script>
</head>

<body class="bg-background-light dark:bg-background-dark font-display text-[#343A40] dark:text-gray-200">

    <div class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden">
        <div class="layout-container flex h-full grow flex-col">
            <header class="bg-white dark:bg-background-dark/80 backdrop-blur-sm sticky top-0 z-10 border-b border-gray-200 dark:border-gray-700">
                <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex items-center justify-between h-16">
                        <div class="flex items-center gap-4">
                            <span class="material-symbols-outlined text-primary text-2xl">
                                admin_panel_settings
                            </span>
                            <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">Contract Monthly Claim System - Manager Dashboard</h2>
                        </div>
                        <div class="flex items-center gap-4">
                            <a class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-primary text-white text-sm font-bold leading-normal tracking-[0.015em]" href="@Url.Action("Index", "Register")">
                                <span class="truncate">Logout</span>
                            </a>
                        </div>
                    </div>
                </div>
            </header>
            <main class="flex-1">
                <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
                    <div class="flex flex-col gap-6">
                        <div class="flex flex-wrap justify-between gap-3 p-4">
                            <div class="flex min-w-72 flex-col gap-3">
                                <p class="text-4xl font-black leading-tight tracking-[-0.033em]">Manager Dashboard</p>
                                <p class="text-gray-500 dark:text-gray-400 text-base font-normal leading-normal">Manage and review all submitted claims</p>
                            </div>
                        </div>

                        <!-- Statistics Cards -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 px-4">
                            <div class="bg-white dark:bg-background-dark/50 p-6 rounded-lg border border-gray-200 dark:border-gray-700">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Claims</p>
                                        <p class="text-3xl font-bold text-primary">156</p>
                                    </div>
                                    <span class="material-symbols-outlined text-primary text-3xl">receipt_long</span>
                                </div>
                            </div>
                            <div class="bg-white dark:bg-background-dark/50 p-6 rounded-lg border border-gray-200 dark:border-gray-700">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Pending Approval</p>
                                        <p class="text-3xl font-bold text-[#FFC107]">23</p>
                                    </div>
                                    <span class="material-symbols-outlined text-[#FFC107] text-3xl">pending_actions</span>
                                </div>
                            </div>
                            <div class="bg-white dark:bg-background-dark/50 p-6 rounded-lg border border-gray-200 dark:border-gray-700">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">This Month</p>
                                        <p class="text-3xl font-bold text-[#28A745]">$45,670</p>
                                    </div>
                                    <span class="material-symbols-outlined text-[#28A745] text-3xl">payments</span>
                                </div>
                            </div>
                        </div>

                        <!-- Claims Management Table -->
                        <div class="px-4 py-3">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-xl font-bold">All Claims</h3>
                                <div class="flex gap-2">
                                    <select class="form-select rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-background-dark px-3 py-2 text-sm">
                                        <option>All Status</option>
                                        <option>Pending</option>
                                        <option>Approved</option>
                                        <option>Rejected</option>
                                    </select>
                                </div>
                            </div>
                            <div class="flex overflow-hidden rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark/50">
                                <table class="flex-1">
                                    <thead>
                                        <tr class="bg-gray-50 dark:bg-gray-800/50">
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[12%]">Claim ID</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[18%]">Lecturer</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[15%]">Submit Date</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[15%]">Period</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[12%]">Amount</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[12%]">Status</th>
                                            <th class="px-4 py-3 text-left text-sm font-medium leading-normal w-[16%]">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="border-t border-t-gray-200 dark:border-t-gray-700">
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">#CMCS-001</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">John Smith</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">2023-10-26</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">Oct 2023</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">$2,500.00</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-[#FFC107]/20 text-[#FFC107]">
                                                    Pending
                                                </span>
                                            </td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                                <div class="flex gap-2">
                                                    <button class="px-3 py-1 bg-[#28A745] text-white text-xs rounded hover:bg-[#28A745]/90">Approve</button>
                                                    <button class="px-3 py-1 bg-[#DC3545] text-white text-xs rounded hover:bg-[#DC3545]/90">Reject</button>
                                                    <button class="px-3 py-1 bg-primary text-white text-xs rounded hover:bg-primary/90">View</button>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="border-t border-t-gray-200 dark:border-t-gray-700">
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">#CMCS-002</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">Jane Doe</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">2023-10-25</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">Oct 2023</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">$2,300.00</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-[#28A745]/20 text-[#28A745]">
                                                    Approved
                                                </span>
                                            </td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                                <div class="flex gap-2">
                                                    <button class="px-3 py-1 bg-primary text-white text-xs rounded hover:bg-primary/90">View</button>
                                                    <button class="px-3 py-1 bg-gray-500 text-white text-xs rounded hover:bg-gray-500/90">Details</button>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="border-t border-t-gray-200 dark:border-t-gray-700">
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">#CMCS-003</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">Mike Johnson</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">2023-10-24</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">Sep 2023</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">$1,890.00</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-[#FFC107]/20 text-[#FFC107]">
                                                    Pending
                                                </span>
                                            </td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                                <div class="flex gap-2">
                                                    <button class="px-3 py-1 bg-[#28A745] text-white text-xs rounded hover:bg-[#28A745]/90">Approve</button>
                                                    <button class="px-3 py-1 bg-[#DC3545] text-white text-xs rounded hover:bg-[#DC3545]/90">Reject</button>
                                                    <button class="px-3 py-1 bg-primary text-white text-xs rounded hover:bg-primary/90">View</button>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Pagination -->
                        <div class="flex items-center justify-center p-4">
                            <a class="flex size-10 items-center justify-center hover:bg-gray-200/50 dark:hover:bg-gray-700/50 rounded-full" href="#">
                                <span class="material-symbols-outlined text-lg">chevron_left</span>
                            </a>
                            <a class="text-sm font-bold leading-normal flex size-10 items-center justify-center rounded-full bg-primary/20 text-primary" href="#">1</a>
                            <a class="text-sm font-normal leading-normal flex size-10 items-center justify-center rounded-full hover:bg-gray-200/50 dark:hover:bg-gray-700/50" href="#">2</a>
                            <a class="text-sm font-normal leading-normal flex size-10 items-center justify-center rounded-full hover:bg-gray-200/50 dark:hover:bg-gray-700/50" href="#">3</a>
                            <span class="text-sm font-normal leading-normal flex size-10 items-center justify-center rounded-full">...</span>
                            <a class="text-sm font-normal leading-normal flex size-10 items-center justify-center rounded-full hover:bg-gray-200/50 dark:hover:bg-gray-700/50" href="#">8</a>
                            <a class="text-sm font-normal leading-normal flex size-10 items-center justify-center rounded-full hover:bg-gray-200/50 dark:hover:bg-gray-700/50" href="#">9</a>
                            <a class="text-sm font-normal leading-normal flex size-10 items-center justify-center rounded-full hover:bg-gray-200/50 dark:hover:bg-gray-700/50" href="#">10</a>
                            <a class="flex size-10 items-center justify-center hover:bg-gray-200/50 dark:hover:bg-gray-700/50 rounded-full" href="#">
                                <span class="material-symbols-outlined text-lg">chevron_right</span>
                            </a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>